{% extends 'base.html.twig' %}

{% block title %}Edit {{ category.name }} - Categories - {{ parent() }}{% endblock %}

{% block page_header %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Edit Category</h1>
    <a href="{{ path('app_category_show', {id: category.id}) }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Back to Details
    </a>
</div>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="d-grid">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save me-1"></i>Update Category
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}