{% use "bootstrap_5_layout.html.twig" %}

{% block form_row -%}
    {%- set row_attr = row_attr|merge({
        class: (row_attr.class|default('') ~ ' mb-3')|trim
    }) -%}
    {{- parent() -}}
{%- endblock form_row %}

{% block form_label -%}
    {%- set label_attr = label_attr|merge({
        class: (label_attr.class|default('') ~ ' form-label')|trim
    }) -%}
    {{- parent() -}}
{%- endblock form_label %}

{% block form_errors -%}
    {%- if errors|length > 0 -%}
        <div class="invalid-feedback d-block">
            {%- for error in errors -%}
                {{ error.message }}
                {%- if not loop.last %}, {% endif -%}
            {%- endfor -%}
        </div>
    {%- endif -%}
{%- endblock form_errors %}